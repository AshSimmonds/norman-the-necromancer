    "typecheck": "tsc",
    "preview": "vite preview"
  },
  "devDependencies": {
    "terser": "^5.14.2",
    "tinypng-cli": "^0.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  }
}
